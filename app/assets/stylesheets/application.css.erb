 .jumbotron {
  height: 280px;
  background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url(<%= asset_path 'event2.png' %>);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  color: white;
  text-align: center;
  margin-bottom: 0px;
  font-size: 10px;
}

