              </div>
            </div>
            <% else  %>
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle btn-lg" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Se connecter </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <%= link_to "Créer un compte", new_user_registration_path, class:"dropdown-item" %>
                <%= link_to "J'ai déjà un compte", new_user_session_path, class:"dropdown-item" %>
              </div>
            </div>
          </ul>
          <%end%>




        </div>
      </nav>

    </header>
    <%= yield %>
    <footer class="page-footer">

